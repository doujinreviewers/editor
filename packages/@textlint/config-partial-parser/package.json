{
  "name": "@textlint/config-partial-parser",
  "version": "0.7.0",
  "description": "A partial parser for textlintrc",
  "keywords": [
    "textlint",
    "config"
  ],
  "homepage": "https://github.com/textlint/editor/tree/master/packages/@textlint/config-partial-parser/",
  "bugs": {
    "url": "https://github.com/textlint/editor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint/editor.git"
  },
  "license": "MIT",
  "author": "azu",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "module/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "lib/",
    "module"
  ],
  "scripts": {
    "build": "tsc -p . && tsc -p ./tsconfig.module.json",
    "clean": "rimraf lib/ module/",
    "prepublishOnly": "npm run clean && npm run build",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "test": "mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "dependencies": {
    "@textlint/kernel": "^3.3.6",
    "@textlint/types": "^1.4.5"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.14.2",
    "mocha": "^8.2.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "ts-node-test-register": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
