{
  "name": "@textlint/script-compiler",
  "version": "0.8.0",
  "description": "textlint script compiler tool",
  "keywords": [
    "textlint",
    "webpack",
    "bundler",
    "compiler"
  ],
  "homepage": "https://github.com/textlint/editor/tree/master/packages/@textlint/script-compiler/",
  "bugs": {
    "url": "https://github.com/textlint/editor/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint/editor.git"
  },
  "license": "MIT",
  "author": "azu",
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "module/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "bin": {
    "textlint-script-compiler": "./bin/cmd.js"
  },
  "files": [
    "bin/",
    "lib/",
    "module/",
    "patch/"
  ],
  "scripts": {
    "build": "tsc -p . && tsc --project ./tsconfig.module.json",
    "clean": "rimraf lib/ module/",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublish": "npm run --if-present build",
    "test": "mocha \"test/**/*.ts\"",
    "watch": "tsc -p . --watch",
    "prebuild:example": "npm run build",
    "build:example": "./bin/cmd.js --outputDir example/ --metadataName test --metadataNamespace example.com"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "dependencies": {
    "@babel/core": "^7.12.10",
    "@textlint/config-loader": "^0.8.0",
    "@textlint/config-partial-parser": "^0.8.0",
    "@textlint/kernel": "^3.4.1",
    "@textlint/runtime-helper": "^0.8.0",
    "@textlint/script-parser": "^0.8.0",
    "@textlint/types": "^1.5.1",
    "babel-loader": "^8.2.2",
    "babel-plugin-static-fs": "^3.0.0",
    "meow": "^9.0.0",
    "read-pkg": "^5.2.0",
    "rimraf": "^3.0.2",
    "webpack": "^4.46.0"
  },
  "devDependencies": {
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/webpack": "^4.41.26",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "textlint-rule-no-dropping-the-ra": "^1.1.2",
    "textlint-rule-preset-ja-technical-writing": "^4.0.1",
    "ts-node": "^9.1.1",
    "ts-node-test-register": "^9.0.1",
    "typescript": "^4.1.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
